@model List<Service>
@{
    ViewData["Title"] = "Services";
   
    int count = 1;
}


<div class="d-flex justify-content-end mb-2">
    <a class="btn btn-success text-light" asp-area="Admin" asp-controller="Services" asp-action="Create">Create Category</a>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>

                            <th>
                                Description
                            </th>

                            <th>
                                Price
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Category
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Service item in Model)
                        {
                            <tr>
                                <td> @count</td>

                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.Category.Name
                                </td>
                                <td>
                                    <img src="~/assets/img/@item.ServiceImages.FirstOrDefault(s=>s.IsActive).Path" style="height:100px;width:100px;"></img>
                                </td>
                                <td>
                                    <a class="btn btn-primary text-light">Detail</a>
                                    <a class="btn btn-warning text-light" asp-area="Admin" asp-controller="Services" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                                    <a class="btn btn-danger text-light" asp-area="Admin" asp-controller="Services" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                                </td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

